<div class="flex-container">
  <div id='title'>
    <h3><%= @merchant.name %>'s' Bulk Discounts</h3>
  </div>
  <div id='nav'>
      <th><%= link_to "Dashboard", "/merchants/#{@merchant.id}/dashboard" %></th>&emsp;
      <th><%= link_to "My Items", "/merchants/#{@merchant.id}/items" %></th>&emsp;
      <th><%= link_to "My Invoices", "/merchants/#{@merchant.id}/invoices" %></th>&emsp;
      <th><%= link_to "My Bulk Discounts", "/merchants/#{@merchant.id}/bulk_discounts" %></th>&emsp;
      <th><%= link_to "Create New Bulk Discount", "/merchants/#{@merchant.id}/bulk_discounts/new" %></th>
  </div>
</div>

<div class='holidays'>
  <h3>Upcoming Holidays</h3>
  <% @holidays.each do |holiday| %>
    <ul>
      <li><%= holiday.name %></li>
      <ul>
        <li><%= DateTime.parse(holiday.date).strftime("%m/%d/%Y") %></li>
      </ul>
    </ul>
  <% end %>
</div>

  <center><h2 style='background-color: #f1f1f1;'>My Bulk Discounts</h2></center>

<div class="flex-container">

    <div class='body-left'>
        <ul>
            <% @merchant.bulk_discounts.each do |discount| %>
                <div id="discount-<%= discount.id %>">
                    <li><%= link_to "This discount is #{number_to_percentage(discount.percent_discount, precision: 0)} off #{discount.quantity_threshold} items", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}" %></li><%= button_to "Delete This Bulk Discount", "/merchants/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
                </div>
                <br>
            <% end %>
        </ul>
    </div>