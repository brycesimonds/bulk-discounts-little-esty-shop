<h1>Edit Bulk Discount</h1>
<%= form_with model: @bulk_discount, url: "/merchants/#{@bulk_discount.merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percent_discount %>
  <%= f.text_field :percent_discount %>

  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %>

  <%= f.submit %>
<% end %>