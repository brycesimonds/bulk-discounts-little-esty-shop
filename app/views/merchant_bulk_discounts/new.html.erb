<h1>New Bulk Discount</h1>
<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts", method: :post, local: true do |f| %>
  <%= f.label :percent_discount %>
  <%= f.text_field :percent_discount %>

  <%= f.label :quantity_threshold %>
  <%= f.text_field :quantity_threshold %>

  <%= f.hidden_field :merchant_id, value: "#{@merchant.id}" %>

  <%= f.submit %>
<% end %>
